PORT=5000
# Use one of the following. For quick local development, use the local URI below.
# Local Mongo (recommended for dev):
MONGO_URI=mongodb://localhost:27017/pos_db

# MongoDB Atlas example (replace <user> and <password> â€” URL-encode special chars in password):
# MONGO_URI=mongodb+srv://<user>:<password>@cluster0.yourcluster.mongodb.net/pos_db?retryWrites=true&w=majority

JWT_SECRET=changeme
JWT_EXPIRE=1d

# Google OAuth Client ID (optional): set this to enable Google Sign-in
GOOGLE_CLIENT_ID=

# Secret key to allow creating admins via POST /api/auth/register-admin
# For local development you can set this value to something you control (DO NOT use this in production)
ADMIN_SIGNUP_KEY=Hamza@588

# PhonePe (UPI) integration (sandbox)
PHONEPE_MERCHANT_VPA=merchant@upi
PHONEPE_MERCHANT_NAME=MyPOS
PHONEPE_SECRET=your_phonepe_secret_here
PHONEPE_SANDBOX_URL=https://sandbox.phonepe.com
# enable local test webhook endpoint (only for local/dev)
PHONEPE_ALLOW_TEST=true
# allow bypassing signature verification in dev (not for production)
PHONEPE_ALLOW_UNVERIFIED=true
